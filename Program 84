
#include <stdio.h>
struct Book
{
    char title[50];
    char author[50];
    int pages;
    float price;
};

void DisplayBook(struct Book b)
{
    printf("Titl %s\n", b.title);
    printf("Author   %s\n", b.author);
    printf("Pages %d\n", b.pages);
    printf("Price %f\n", b.price);
}

int main()
{
    struct Book b;
    
    printf("Enter book title ");
    scanf(" %s", b.title);
    printf("Enter author ");
    scanf("  %s, b.author);
    printf("Enter number of pages");
    scanf("%d", &b.pages);
    printf("Enter price");
    scanf("%f", &b.price);
    
    DisplayBook(b);
    
    return 0;
}


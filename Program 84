#include <stdio.h>

struct Book
{
    char title[50];
    char author[50];
    int pages;
    float price;
};

void seeBook(struct Book b)
{
    printf("Title: %s\n", b.title);
    printf("Author: %s\n", b.author);
    printf("Pages: %d\n", b.pages);
    printf("Price: %f\n", b.price);
}

int main()
{
    struct Book b;
    
    printf("Enter book title: ");
    scanf(" %c", b.title);
    printf("Enter author: ");
    scanf(" %c", b.author);
    printf("Enter number of pages: ");
    scanf("%d", &b.pages);
    printf("Enter price: ");
    scanf("%f", &b.price);
    
    seeBook(b);
    
    return 0;
}

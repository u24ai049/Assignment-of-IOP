
#include <stdio.h>

int main() {
    int arr1[10], arr2[10], sum[10];
    
    printf("Enter 10 integers for the first array:\n");
    for(int i = 0; i < 10; i++)  
    {
        scanf("%d", &arr1[i]);
    }
    
    printf("Enter 10 integers for the second array:\n");
    for(int i = 0; i < 10; i++)
    {
        scanf("%d", &arr2[i]);
    }
    
    for(int i = 0; i < 10; i++) 
    {
        sum[i] = arr1[i] + arr2[i];
    }
    
    printf("Sum of the two arrays:\n");
    for(int i = 0; i < 10; i++) 
    {
        printf("%d ", sum[i]);
    }
    
    return 0;
}



